<h1>Edit a Pet Item</h1>
{{#with foundPet}}
<form action='/pets/edit/{{id}}' method="POST">
    <label for="name">Enter Pet Name: </label>
    <input type="text" name="name" placeholder="Enter Name"
        value="{{name}}"/><br>

    <label for="description">Enter Pet Description: </label>
    <input type="text" name="description" placeholder="Enter Description"
        value="{{description}}" /><br>

    <label for="price">Enter Image URL: </label>
    <input type="text" name="price" placeholder="Enter URL"
        value="{{imageUrl}}" /><br>

    <button type="submit">Edit Item</button>
</form>
{{/with}}